<!--Blog Area Start-->
<div class="blog-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section-title">
          <h4><span>{{ 'blogs.title' | t }}</span></h4>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="blog-carousel carousel-style-two">
        {% for article in blogs[section.settings.blogname].articles %}
        <div class="col-md-4">
          <div class="blog-item">
            <div class="blog-image">
              <a href="{{ article.url }}" class="white-hover"><img src="{{ article.image.src | img_url: 'medium' }}" alt=""></a>
            </div>
            <div class="blog-description ">
              <h2 class="post-title"><a href="{{ article.url }}">{{ article.title }}</a></h2>
              <div class="post-date"><time datetime="{{ article.published_at }}">{{ article.published_at | date: "%a, %b %d, %Y" }}</time></div>
              {% if article.excerpt.size > 0 %}
              <p>{{ article.excerpt | truncatewords: 20}}</p>
              {% else %}
              <p>{{ article.content | strip_html | truncatewords: 20 }}</p>
              {% endif %}
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<!--End of Blog Area-->