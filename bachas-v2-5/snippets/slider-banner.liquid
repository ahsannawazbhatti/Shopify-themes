<!--Slider Banner Area Start-->
<div data-section-id="{{ section.id }}" data-section-type="slideshow-section" class="slider-banner-area">
  <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
    <div class="slider-area">
      {% if section.blocks.size > 0 %}
      <div class="preview-2" id="Slideshow-{{ section.id }}">
        <div id="nivoslider" class="slides">	
          {% for block in section.blocks %}
          {% if block.type == 'image' %}
          {% if block.settings.slide_link != blank %}          
          <a href="{{ block.settings.slide_link }}" {{ block.shopify_attributes }}>
            {% endif %}
            {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: '1120x796' }}" alt=""/>
            {% endif %}
            {% if block.settings.slide_link != blank %}          
          </a>
          {% endif %}
          {% endif %}
          {% endfor %}
        </div>
      </div>
      {% endif %}
    </div>
  </div>
  <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
    {% for block in section.blocks %}
    {% if block.type == 'sideimage' %}
    <div class="banner-img">
      <a href="{{ block.settings.slide_link }}" class="white-hover" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
        <img src="{{ block.settings.image | img_url: '775x386' }}" alt=""/>
        {% endif %}
      </a>
    </div>
    {% endif %}
    {% endfor %}
  </div>
</div>
<!--End of Slider Banner Area-->