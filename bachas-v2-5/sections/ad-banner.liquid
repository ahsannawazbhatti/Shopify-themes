{% include section.settings.feature_advert_design %}

{% schema %}
{
  "name": "Ad banner section",
  "class": "index-section index-section--flush",
  "max_blocks": 6,
  "settings": [
    {
    "type": "select",
    "id": "feature_advert_design",
    "label": "Select Design",
    "options": [
      {
      "value": "feature-advert1",
      "label": "Design 1 (Single image)"
      },
      {
      "value": "feature-advert2",
      "label": "Design 2 (Two images)"
      },
      {
      "value": "feature-advert3",
      "label": "Design 3 (Three images)"
      },
      {
      "value": "feature-advert4",
      "label": "Design 4 (Six images)"
      }
    ],
    "default": "feature-advert2"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "ad image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Slide Description",
          "info": "Used in slider 3"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
		}
      ]
    }
  ],
  "presets": [{
    "name": "Ad banner section",
    "category": "Image",
    "blocks": [
      {
        "type": "image"
      },
      {
        "type": "image"
      }
    ]
  }]
}
{% endschema %}
