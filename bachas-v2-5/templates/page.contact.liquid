<!--Map area start -->
<div >
  {% if settings.show_map %}
  {{ settings.map_code }}
  {% endif %}
</div>
<!--Map area end -->
<!--Contact Us Area Start-->
<div class="contact-us-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="page-heading">{{ 'contact.form.page_heading' | t }}</h1>
      </div>
      <div class="col-md-12 contact-form-box">
          {% form 'contact' %}
            {% if form.posted_successfully? %}
            <p class="note form-success">
              {{ 'contact.form.post_success' | t }}
            </p>
            {% endif %}

            {% include 'form-errors-custom' %}
          <fieldset>
            <h3 class="page-subheading">{{ 'contact.form.leave_msg' | t }}</h3>
            <div class="row">
              <div class="col-xs-12 col-md-3">
                <p class="form-group">
                  <label>{{ 'contact.form.name' | t }}</label>
                  <input type="text" id="contactFormName" name="contact[name]" class="form-control grey" placeholder="{{ 'contact.form.name' | t }}" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" />
                </p>
                <p class="form-group">
                  <label>{{ 'contact.form.email' | t }}</label>
                  <input type="email" id="contactFormEmail" name="contact[email]" class="form-control grey" placeholder="{{ 'contact.form.email' | t }}" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" />
                </p>
                <p class="form-group">
                  <label>{{ 'contact.form.phone' | t }}</label>
                  <input type="text" id="contactFormPhone" name="contact[phone]" class="form-control grey" placeholder="{{ 'contact.form.phone' | t }}" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" />
                </p>
              </div>
              <div class="col-xs-12 col-md-9">
                <div class="form-group">
                  <label for="message">{{ 'contact.form.message' | t }}</label>
                  <textarea class="form-control" id="contactFormMessage" name="contact[body]" placeholder="{{ 'contact.form.message' | t }}">{% if form.body %}{{ form.body }}{% endif %}</textarea>
                </div>
              </div>
            </div>
            <div class="submit">
              <button class="" id="submitMessage" name="submitMessage" type="submit"><span>{{ 'contact.form.send' | t }}<i class="fa fa-chevron-right right"></i></span>
              </button>
            </div>
          </fieldset>
        {% endform %}
      </div>    
    </div>
  </div>
</div>
<!--End of Contact Us Area-->
