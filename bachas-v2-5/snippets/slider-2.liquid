<!-- slider area start -->
<div data-section-id="{{ section.id }}" data-section-type="slideshow-section" class="slider-area home-three-slider">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        {% if section.blocks.size > 0 %}
        <div class="preview-2" id="Slideshow-{{ section.id }}">
          <div id="nivoslider" class="slides">
            {% for block in section.blocks %}
            {% if block.type == 'image' %}
            {% if block.settings.slide_link != blank %}          
            <a href="{{ block.settings.slide_link }}" {{ block.shopify_attributes }}>
              {% endif %}
              {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url: '1170x574' }}" alt=""/>
              {% endif %}
              {% if block.settings.slide_link != blank %}          
            </a>
            {% endif %}
            {% endif %}
            {% endfor %}
          </div>  
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
<!-- slider area end-->