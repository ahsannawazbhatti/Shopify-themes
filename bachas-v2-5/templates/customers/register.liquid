{% include 'breadcrumb' %}
<section class="account-content-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="page-heading">{{ page_title }}</h1>
      </div>

      <div class="col-lg-6  col-lg-offset-3 col-md-6  col-md-offset-3 col-sm-6  col-sm-offset-3">
        {% form 'create_customer' %}
        <div  id="create-account-form" >
          <h3 class="page-subheading">{{ 'customer.register.title' | t }}</h3>

          <fieldset id="account" class="form-horizontal">
            <legend>{{ 'customer.register.details_message' | t }}</legend>

            {% include 'form-errors-custom' %}
            <div class="form-group required">
              <label for="first_name">{{ 'customer.register.first_name' | t }}</label>
              <div class="col-sm-10">
                <input type="text" value="" name="customer[first_name]" id="first_name" placeholder="{{ 'customer.register.first_name' | t }}" {% if form.errors contains "first_name" %} class="error account-input" {% else %} class="account-input" {% endif %} autofocus>
              </div>
            </div>
            <div class="form-group required">
              <label for="last_name">{{ 'customer.register.last_name' | t }}</label>
              <div class="col-sm-10">
                <input type="text" value="" name="customer[last_name]" id="last_name" placeholder="{{ 'customer.register.last_name' | t }}" {% if form.errors contains "last_name" %} class="error account-input" {% else %} class="account-input" {% endif %}>
              </div>
            </div>
            <div class="form-group required">
              <label for="email">{{ 'customer.register.email' | t }}</label>
              <div class="col-sm-10">
                <input type="email" value="" name="customer[email]" id="email" placeholder="{{ 'customer.register.email' | t }}" {% if form.errors contains "email" %} class="error account-input" {% else %} class="account-input" {% endif %} autocorrect="off" autocapitalize="off">
              </div>
            </div>
            <div class="form-group required">
              <label for="password">{{ 'customer.register.password' | t }}</label>
              <div class="col-sm-10">
                <input type="password" value="" name="customer[password]" id="create_password" placeholder="{{ 'customer.register.password' | t }}" {% if form.errors contains "password" %} class="error account-input" {% else %} class="account-input" {% endif %}>
              </div>
            </div>
          </fieldset>
          <div class="submit">					
            <button name="submitcreate" id="submitcreate" type="submit" class="">
              <span>
                <i class="fa fa-user left"></i>
                {{ 'customer.register.submit' | t }}
              </span>
            </button>
            &nbsp;
            {{ 'customer.register.or' | t }} <a class="btn-acct" href="{{ shop.url }}">{{ 'customer.register.cancel' | t }}</a>

          </div>
        </div>
        {% endform %}
      </div>
    </div>
  </div>
</section>